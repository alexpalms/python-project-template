{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Diambra Run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/diambra_run.py",
            "args": [
                "--agent-type", "${input:agent_type}",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DIAMBRA_ENVS": "${input:DIAMBRA_ENVS}"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "agent_type",
            "type": "pickString",
            "description": "Select the agent type",
            "options": ["random", "random_with_custom_moves"],
            "default": "random"
        },
        {
            "id": "DIAMBRA_ENVS",
            "type": "promptString",
            "description": "Select the DIAMBRA_ENVS",
            "default": "127.0.0.1:32785"
        }
    ]
}
